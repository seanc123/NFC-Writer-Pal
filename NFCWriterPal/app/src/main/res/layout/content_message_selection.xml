<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_message_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.apps.seanc.nfcwriterpal.ActivityHandlers.MessageSelection"
    tools:showIn="@layout/app_bar_message_selection">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Webpage"
            android:id="@+id/ms_btn_webpage"
            android:layout_column="0"
            android:layout_row="0"
            android:drawableLeft="@drawable/ic_web_icon"
            android:background="@drawable/btn_msg_selection"
            android:layout_width="160dp"
            android:layout_height="85dp"
            android:layout_gravity="left" />

        <Button
            android:text="Email"
            android:id="@+id/ms_btn_email"
            android:layout_row="0"
            android:layout_column="1"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:drawableTint="@android:color/holo_red_dark"
            android:background="@drawable/btn_msg_selection"
            android:layout_width="160dp"
            android:layout_gravity="right"
            android:layout_height="85dp" />

        <Button
            android:text="Phone Number"
            android:id="@+id/ms_btn_phone"
            android:layout_column="0"
            android:layout_row="1"
            android:drawableLeft="@android:drawable/sym_action_call"
            android:background="@drawable/btn_msg_selection"
            android:layout_marginTop="15dp"
            android:layout_width="160dp"
            android:layout_height="85dp" />

        <Button
            android:text="App"
            android:id="@+id/ms_btn_app"
            android:layout_row="2"
            android:layout_column="0"
            android:drawableLeft="@mipmap/ic_launcher"
            android:background="@drawable/btn_msg_selection"
            android:layout_height="85dp"
            android:layout_width="160dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="left" />

        <Button
            android:text="Location"
            android:id="@+id/ms_btn_location"
            android:layout_column="1"
            android:layout_row="2"
            android:drawableLeft="@android:drawable/ic_menu_mylocation"
            android:drawableTint="@android:color/black"
            android:background="@drawable/btn_msg_selection"
            android:layout_marginTop="15dp"
            android:layout_width="160dp"
            android:layout_height="85dp"
            android:layout_gravity="right" />

        <Button
            android:text="Text"
            android:id="@+id/ms_btn_text"
            android:layout_column="1"
            android:layout_row="1"
            android:drawableLeft="@android:drawable/sym_action_chat"
            android:drawableTint="@android:color/holo_blue_dark"
            android:background="@drawable/btn_msg_selection"
            android:layout_height="85dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:layout_width="160dp" />
    </GridLayout>

</RelativeLayout>
